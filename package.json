{
  "name": "@lowcode/system",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build-schema": "pnpm --filter=./packages/lowcode-schema run build",
    "build-types": "pnpm --filter=./packages/lowcode-types run build",
    "watch-schema": "pnpm --filter=./packages/lowcode-schema run watch",
    "watch-types": "pnpm --filter=./packages/lowcode-types run watch",
    "build-packages": "run-s build-schema build-types",
    "designer:start": "pnpm run build-packages && pnpm --filter lowcode-designer start",
    "renderer-vue:start": "pnpm run build-packages && pnpm --filter lowcode-renderer-vue serve",
    "workbench:start": "pnpm run build-packages && pnpm --filter lowcode-workbench start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.8.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.4",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.6",
    "vm-browserify": "^1.1.2"
  }
}
